# Lumentra Infrastructure Environment Variables
# Copy to .env and fill in values before deployment

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=lumentra
POSTGRES_PASSWORD=          # REQUIRED: Strong password (32+ chars recommended)
POSTGRES_DB=lumentra

# =============================================================================
# Authentik
# =============================================================================
AUTHENTIK_DB_NAME=authentik
AUTHENTIK_SECRET_KEY=       # REQUIRED: Generate with: openssl rand -hex 32

# =============================================================================
# Email (Resend SMTP - Hetzner blocks standard SMTP ports)
# =============================================================================
# Get API key from https://resend.com
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USERNAME=resend
SMTP_PASSWORD=              # REQUIRED: Resend API key (re_xxxx)
SMTP_FROM=noreply@lumentra.ai

# =============================================================================
# MinIO (S3-Compatible Storage)
# =============================================================================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=        # REQUIRED: Min 8 characters
MINIO_BROWSER_REDIRECT_URL=https://storage.lumentra.ai

# =============================================================================
# URLs (Update for your domain)
# =============================================================================
# Authentik
AUTHENTIK_URL=https://auth.lumentra.ai

# MinIO
MINIO_API_URL=https://s3.lumentra.ai
MINIO_CONSOLE_URL=https://storage.lumentra.ai
