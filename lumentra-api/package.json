{
  "name": "lumentra-api",
  "version": "0.1.0",
  "description": "Production voice agent backend for Lumentra",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:llama": "GROQ_MODEL=llama-3.1-8b-instant tsx watch src/index.ts",
    "dev:gptoss": "GROQ_MODEL=gpt-oss-20b-128k tsx watch src/index.ts",
    "dev:qwen": "GROQ_MODEL=qwen3-32b-131k tsx watch src/index.ts",
    "dev:llama70b": "GROQ_MODEL=llama-3.3-70b-versatile tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --format=esm --packages=external",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.3",
    "@google/generative-ai": "^0.24.1",
    "@hono/node-server": "^1.13.7",
    "@supabase/supabase-js": "^2.47.10",
    "dotenv": "^17.2.3",
    "groq-sdk": "^0.37.0",
    "hono": "^4.6.14",
    "isomorphic-dompurify": "^2.18.0",
    "libphonenumber-js": "^1.11.18",
    "node-cron": "^3.0.3",
    "pino": "^9.6.0",
    "resend": "^4.0.1",
    "twilio": "^5.4.0",
    "ws": "^8.19.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.2",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22"
  }
}
